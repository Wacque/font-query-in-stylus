
font-6(size)
  props = arguments
  for prop in props
    .font-6-{prop}
      font-size: prop

  @media screen and (min-width: 320px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (320/375)

  @media screen and (min-width: 360px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (375/375)

  @media screen and (min-width: 375px)
    for prop in props
      .font-6-{prop}
        font-size: prop

  @media screen and (min-width: 414px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (414/375)

  @media screen and (min-width: 450px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (450/375)

  @media screen and (min-width: 480px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (480/375)

  @media screen and (min-width: 640px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (640/375)

  @media screen and (min-width: 768px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (768/375)

  @media screen and (min-width: 800px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (800/375)

  @media screen and (min-width: 950px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (950/375)

  @media screen and (min-width: 1200px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (1200/375)

  @media screen and (min-width: 1680px)
    for prop in props
      .font-6-{prop}
        font-size: prop * (1680/375)